<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Hello World!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <!--在布局xml文件中添加地图控件-->
    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />


    <Button android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        android:layout_gravity="left|top"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latitude"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_alignRight="@+id/longitude"
        android:layout_alignEnd="@+id/longitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_toRightOf="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toStartOf="@+id/OK" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_alignBottom="@+id/longitude" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please input the location:"
        android:layout_gravity="left|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bmapView"
        android:layout_alignEnd="@+id/bmapView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/OK"
        android:layout_alignRight="@+id/bmapView"
        android:layout_alignEnd="@+id/bmapView"
        android:layout_alignTop="@+id/button"
        android:layout_alignBottom="@+id/editText" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/bmapView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignRight="@+id/bmapView"
        android:layout_alignEnd="@+id/bmapView"
        android:gravity="center|center_vertical|center_horizontal|bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/home_map"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_weight="0.31"
            android:background="@mipmap/launch_03" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/chat_map"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_weight="0.31"
            android:background="@mipmap/launch_04" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/location_map"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignRight="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:layout_weight="0.31"
            android:background="@mipmap/launch_07" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:id="@+id/send"
        android:layout_toEndOf="@+id/editText"
        android:layout_alignBottom="@+id/longitude"
        android:layout_alignTop="@+id/longitude"
        android:textSize="@dimen/abc_dialog_list_padding_vertical_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/refresh"
        android:layout_toLeftOf="@+id/OK"
        android:layout_toStartOf="@+id/OK"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignTop="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BlueTooth"
        android:id="@+id/blu"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignTop="@+id/editText"
        android:layout_toLeftOf="@+id/refresh" />


</RelativeLayout>